{
    "name": "setup",
    "version": "1.0.0",
    "description": "Simple setup with Typescript and Node, using esbuild for bundling",
    "type": "module",
    "private": true,
    "scripts": {
        "lint": "tsc",
        "start": "node dist/main.js",
        "build": "esbuild src/main.ts --bundle --platform=node --outfile=dist/main.js --format=esm",
        "dev:tsc": "tsc --watch --preserveWatchOutput",
        "dev:node": "node --watch dist/main.js",
        "dev:esbuild": "pnpm run build --watch",
        "dev": "run-p dev:*"
    },
    "keywords": [
        "setup",
        "typescript",
        "node"
    ],
    "author": "Juan Sebastian Casta√±eda Burbano <js.castanedaburbano@gmail.com>",
    "license": "MIT",
    "devDependencies": {
        "@eslint/js": "^9.10.0",
        "@types/node": "^22.5.4",
        "esbuild": "^0.23.1",
        "eslint": "^9.10.0",
        "globals": "^15.9.0",
        "npm-run-all": "^4.1.5",
        "prettier": "^3.3.3",
        "typescript": "^5.6.2",
        "typescript-eslint": "^8.5.0"
    },
    "prettier": {
        "singleQuote": true,
        "semi": true,
        "tabWidth": 4,
        "arrowParens": "avoid"
    }
}